{{#partial "content"}}

    <div class="row">
        {{#each Heroes}}
            <div class="col-sm-3">
                <div class="card my-3">
                    <h5 class="card-title text-center">{{heroName}}</h5>
                    <img class="logo1" src="{{heroImage}}">
                    <div class="card-body">
                        <p>Plays well in the {{ strength }} and he
                        plays terribly in {{ weakness }} position. he is
                        currently playing in {{clubName}} Football Club</p>
                    </div>
                    <div class="d-flex">
                        <button class="btn bg-info m-3"><a>Delete</a></button>
                        <button class="btn bg-info m-3"><a href="/heroes/{{id}}/update">Edit Player</a></button>
                    </div>

                </div>

            </div>
        {{/each}}
    </div>


{{/partial}}
{{>layout.hbs}}